<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="cmtsSelenium" class="com.thoughtworks.selenium.DefaultSelenium">
		<constructor-arg index="0" value="${selenium.cmts.host}" />
		<constructor-arg index="1" value="${selenium.cmts.port}" />
		<constructor-arg index="2" value="${selenium.cmts.browser}" />
		<constructor-arg index="3" value="${selenium.cmts.base-url}" />
	</bean>
	
	<bean id="cmtsConditionRunner"
		class="com.thoughtworks.selenium.condition.JUnitConditionRunner">
		<constructor-arg index="0" ref="cmtsSelenium" />
		<constructor-arg index="1" value="${selenium.initial-delay}" />
		<constructor-arg index="2" value="${selenium.interval}" />
		<constructor-arg index="3" value="${selenium.timeout}" />
	</bean>

</beans>