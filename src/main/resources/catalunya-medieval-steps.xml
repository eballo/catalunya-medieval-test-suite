<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="lifecycleSteps" class="cat.catalunyamedieval.cmts.steps.LifecycleSteps">
    <constructor-arg ref="cmtsSelenium"/>
  </bean>

  <bean id="pageFactory" class="cat.catalunyamedieval.cmts.pages.PageFactory">
     <constructor-arg ref="cmtsSelenium"/>
     <constructor-arg ref="cmtsConditionRunner"/>
  </bean>  
  
  <bean id="catMedievalSteps" class="cat.catalunyamedieval.cmts.steps.CatMedievalSteps">
     <constructor-arg ref="pageFactory"/>
  </bean>  


</beans>